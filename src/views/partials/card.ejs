<div class="col mb-5">
  <div class="card h-100">
    <%#
      <!-- Sale badge-->
      <div
        class="badge bg-dark text-white position-absolute"
        style="top: 0.5rem; right: 0.5rem"
      >
        Sale
      </div>
    %>
    <!-- Product image-->
    <img class="card-img-top" src="./images/<%= event.image %>" alt="..." />
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder"><%= event.name %></h5>
        <!-- Product price-->
        $<%= event.price %>
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center">
        <form action="/events/save/<%= event.id %>">
          <button class="btn btn-outline-dark mt-auto" data-save="<%= event.id %>">Agregar al carrito</button>
        </form>
      </div>
    </div>
  </div>
</div>
